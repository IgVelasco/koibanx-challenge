{
  "name": "rather",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --exit --recursive src/tests",
    "dev": "nodemon src/index.js",
    "lint": "eslint ./ --ignore-path .gitignore",
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test:unit": "cross-env NODE_ENV=test mocha src/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 --exit src/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "docs": "apidoc -i src -o docs",
    "postdocs": "open-cli docs/index.html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apidoc": "^0.53.1",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-safe": "^8.2.0",
    "eslint": "^8.33.0",
    "express": "^4.18.2",
    "express-validation": "^4.1.0",
    "express-validator": "^6.15.0",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "mongoose": "^6.9.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^2.0.20",
    "open-cli": "^7.1.0",
    "prettier": "^2.8.4",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "xlsx": "^0.18.5"
  }
}
